{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ],
      "@functions/*": [
        "netlify/functions/*"
      ]
    },
    "types": [
      "node",
      "vite/client"
    ],
    "allowImportingTsExtensions": true
  },
  "include": [
    "src",
    "netlify/functions",
    "scripts",
    "types"
  ]
}
