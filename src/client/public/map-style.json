{
  "version": 8,
  "name": "Lorg Retro",
  "sources": {
    "composite": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v8"
    }
  },
  "sprite": "mapbox://sprites/mapbox/streets-v8",
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "center": [-3.864, 56.62],
  "zoom": 6,
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#173A2B"
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "composite",
      "source-layer": "landcover",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          ["snow", "ice"], "#1F4833",
          "#1E4F39"
        ],
        "fill-opacity": 0.9
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "composite",
      "source-layer": "landuse",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          ["park", "wood", "grass", "scrub"], "#296848",
          ["agriculture", "crop"], "#24593F",
          "#1E4F39"
        ],
        "fill-opacity": 0.85
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "fill-color": "#205A61",
        "fill-opacity": 0.92
      }
    },
    {
      "id": "water-outline",
      "type": "line",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "line-color": "#133B41",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 0.2,
          12, 1.2
        ]
      }
    },
    {
      "id": "national-park",
      "type": "fill",
      "source": "composite",
      "source-layer": "park",
      "paint": {
        "fill-color": "#3FD8A6",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "roads-case",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "paint": {
        "line-color": "#0F3323",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 0.15,
          12, 1.4
        ]
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "paint": {
        "line-color": "#F6DD85",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 0.05,
          12, 1.0
        ]
      }
    },
    {
      "id": "rail",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": ["==", "class", "major_rail"],
      "paint": {
        "line-color": "#F9A6C2",
        "line-dasharray": [3, 3],
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 0.1,
          12, 0.8
        ]
      }
    },
    {
      "id": "boundaries",
      "type": "line",
      "source": "composite",
      "source-layer": "admin",
      "filter": ["==", "maritime", 0],
      "paint": {
        "line-color": "#0F3323",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          3, 0.2,
          10, 0.6
        ],
        "line-dasharray": [2, 2],
        "line-opacity": 0.4
      }
    },
    {
      "id": "place-city",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "filter": ["==", "type", "city"],
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["DIN Offc Pro Medium", "Arial Unicode MS Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 4, 9, 10, 13],
        "text-letter-spacing": 0.15
      },
      "paint": {
        "text-color": "#F6DD85",
        "text-halo-color": "#0F2A1E",
        "text-halo-width": 1.2
      }
    },
    {
      "id": "place-town",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "filter": ["==", "type", "town"],
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["DIN Offc Pro Medium", "Arial Unicode MS Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 5, 7, 10, 11],
        "text-letter-spacing": 0.2
      },
      "paint": {
        "text-color": "#F3F2E8",
        "text-halo-color": "#0F2A1E",
        "text-halo-width": 1
      }
    }
  ]
}
