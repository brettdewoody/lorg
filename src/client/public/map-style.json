{
  "version": 8,
  "name": "Lorg Retro",
  "sources": {
    "composite": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v8"
    }
  },
  "sprite": "mapbox://sprites/mapbox/streets-v8",
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "center": [-3.864, 56.62],
  "zoom": 6,
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#132822"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "fill-color": "#1F4A5A",
        "fill-opacity": 0.9
      }
    },
    {
      "id": "water-outline",
      "type": "line",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "line-color": "#0F2934",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 0.25,
          12, 1.2
        ]
      }
    },
    {
      "id": "roads-case",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "paint": {
        "line-color": "#0E2C1F",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 0.18,
          12, 1.6
        ]
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "paint": {
        "line-color": "#F6DD85",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 0.06,
          12, 1.1
        ]
      }
    },
    {
      "id": "park-label",
      "type": "symbol",
      "source": "composite",
      "source-layer": "poi_label",
      "minzoom": 5,
      "filter": [
        "all",
        ["==", ["get", "class"], "park"],
        [">=", ["get", "sizerank"], 6]
      ],
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["DIN Offc Pro Medium", "Arial Unicode MS Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 5, 7, 10, 12],
        "text-letter-spacing": 0.2,
        "text-max-width": 8,
        "text-padding": 2,
        "text-variable-anchor": ["center", "top", "bottom", "left", "right"],
        "text-justify": "auto",
        "text-radial-offset": 0.15,
        "symbol-sort-key": ["-", ["coalesce", ["get", "sizerank"], 10]]
      },
      "paint": {
        "text-color": "#F0F4C7",
        "text-halo-color": "#0B1F1A",
        "text-halo-width": 1.2,
        "text-opacity": ["interpolate", ["linear"], ["zoom"], 5, 0.5, 8, 0.9]
      }
    },
    {
      "id": "river-label",
      "type": "symbol",
      "source": "composite",
      "source-layer": "waterway",
      "filter": ["in", "class", "river", "stream"],
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["DIN Offc Pro Italic", "Arial Unicode MS Italic"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 5, 8, 12, 13],
        "text-letter-spacing": 0.25,
        "symbol-placement": "line",
        "text-max-angle": 35,
        "text-padding": 1,
        "text-keep-upright": true,
        "symbol-sort-key": ["-", ["coalesce", ["get", "scalerank"], 10]]
      },
      "paint": {
        "text-color": "#4BD4B0",
        "text-halo-color": "#0B1F1A",
        "text-halo-width": 1
      }
    },
    {
      "id": "outdoor-labels",
      "type": "symbol",
      "source": "composite",
      "source-layer": "natural_label",
      "minzoom": 4,
      "filter": [
        "in",
        "type",
        "peak",
        "volcano",
        "mountain_range",
        "glacier",
        "forest",
        "park",
        "wetland",
        "grassland",
        "lake",
        "water",
        "reservoir",
        "bay",
        "sea",
        "ocean"
      ],
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["DIN Offc Pro Medium", "Arial Unicode MS Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 4, 7.5, 7, 10.5, 12, 14.5],
        "text-letter-spacing": 0.3,
        "text-max-width": 8,
        "text-variable-anchor": ["center", "top", "bottom", "left", "right"],
        "text-line-height": 1.05,
        "text-justify": "auto",
        "symbol-sort-key": ["-", ["coalesce", ["get", "symbolrank"], 10]]
      },
      "paint": {
        "text-color": "#F6DD85",
        "text-halo-color": "#0C241B",
        "text-halo-width": 1.2,
        "text-opacity": ["interpolate", ["linear"], ["zoom"], 4, 0.6, 8, 0.95]
      }
    },
    {
      "id": "rail",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": ["==", "class", "major_rail"],
      "paint": {
        "line-color": "#FF9CB8",
        "line-dasharray": [2, 2],
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 0.12,
          12, 0.7
        ]
      }
    },
    {
      "id": "boundaries",
      "type": "line",
      "source": "composite",
      "source-layer": "admin",
      "filter": ["==", "maritime", 0],
      "paint": {
        "line-color": "#0E261B",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          3, 0.2,
          10, 0.8
        ],
        "line-dasharray": [2, 2],
        "line-opacity": 0.35
      }
    },
    {
      "id": "place-city",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "filter": ["==", "type", "city"],
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["DIN Offc Pro Medium", "Arial Unicode MS Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 4, 9, 10, 13],
        "text-letter-spacing": 0.1
      },
      "paint": {
        "text-color": "#C7C0A8",
        "text-halo-color": "#10261B",
        "text-halo-width": 1.2
      }
    },
    {
      "id": "place-town",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "filter": ["==", "type", "town"],
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["DIN Offc Pro Medium", "Arial Unicode MS Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 6, 6.5, 11, 10],
        "text-letter-spacing": 0.2,
        "text-max-width": 6
      },
      "paint": {
        "text-color": "#9CA8A1",
        "text-halo-color": "#0F2A1E",
        "text-halo-width": 0.8,
        "text-opacity": ["interpolate", ["linear"], ["zoom"], 4, 0.05, 6, 0.2, 9, 0.65]
      }
    }
  ]
}
